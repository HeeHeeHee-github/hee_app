<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hee's App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/main.css">
  </head>
  <body>
    <%- include('nav.html') %>
      
      <!-- write form -->
      <h4 class="container mt-4"><strong>수정하기</strong></h4>
      <div class="container mt-3">
          <form action="/edit?_method=PUT" method="POST">
              <div class="form-group">
                  <label>오늘의 할일</label>
                  <input type="text", value="<%= post._id%>" name="id" style="display: none;">
                  <input value = "<%= post.제목%>" type="text" class="form-control" name="title">
              </div>
              <div class="form-group mt-3">
                  <label>마감날짜</label>
                  <input value = "<%= post.날짜%>" type="text" class="form-control" name="date">
              </div>
              <button type="submit" class="btn btn-primary mt-3 edit_btn">수정하기</button>
            </form>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>